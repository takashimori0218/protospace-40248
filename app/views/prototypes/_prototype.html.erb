<div class="card">
  <%= link_to (prototype.image.attached? ? image_tag(prototype.image, class: :card__img) : image_tag('placeholder.png', class: :card__img)), prototype_path(prototype) %>
  <div class="card__body">
    <%= link_to prototype.title, prototype_path(prototype), class: :card__title %>
    <p class="card__summary">
      <%= prototype.catch_copy %>
    </p>
    <%= link_to  "by #{prototype.user.name}", user_path(prototype.user), class: :card__user %>
  </div>
</div>